    <table class="table">
        <thead>
            <tr>
                <th>Employee Name</th>
                <th>City</th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tbody>
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.EmpName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmpCity)
                    </td>
                    <td>@Html.ActionLink("Edit", "Edit", new { id = item.EmpId })</td>
                    <td>@Html.ActionLink("Details", "Details", new { id = item.EmpId })</td>
                    <td>@Html.ActionLink("Delete", "Delete", new { id = item.EmpId })</td>
                </tr>
            </tbody>

            
