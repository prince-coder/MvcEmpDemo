@model IEnumerable<MvcEmpDemo.Models.Employee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Employees</h2>


@*<dl class="dl-horizontal">*@
